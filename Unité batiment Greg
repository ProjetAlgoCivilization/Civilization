unit batiment;

interface
procedure ferme (var P_nourritureTour : integer);
procedure mine (var P_travailTour : integer);
procedure carriere (var P_travailTour : integer);
procedure caserne (var P_point : integer);

implementation

procedure mine(var P_travailTour : integer);
begin
    P_travailTour := p_travailTour + 2;
end;


procedure caserne (var P_point : integer);
begin
    P_point := P_point + 3 ;
end;

procedure ferme(var P_nourritureTour : integer);
begin
    P_nourritureTour := P_nourritureTour +3;
end;

procedure carriere (var P_travailTour : integer) ;
begin
    P_travailTour := P_travailTour +5;
end;

end.

